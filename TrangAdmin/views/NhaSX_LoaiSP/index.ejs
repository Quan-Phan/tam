<!doctype html>
<html><head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/stylesheets/styleAdminSanPham.css" />
    <link rel="stylesheet" href="/stylesheets/styleAdminIndex.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script language="javascript" src="javascript/spAdmin.js"></script>
    <title>Nhà sản xuất và loại sản phẩm</title>
</head>

<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-3">
            <%include ../menu.ejs%>
        </div>
        <div class="col-9">
            <div class="row">
                <div class="col-10"></div>
                <div class="col-2">
                    <%include ../NguoiDungmenu.ejs%>
                </div>
            </div>
            <form class="form-header-sp">
                <span class="custom-span">Danh sách </span>

                <div class="search-spAdmin">
                    <span>Tìm kiếm</span>
                    <input type="text">
                </div>
            </form>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <a href="/themLoaiSP"><button id="btnThem">Thêm loại sản phẩm</button></a>
                    <form id="formDsLoaiXe">
                        <h4 style="color: red;margin-left: 200px">Danh sách loại sản phẩm</h4>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col" style="width: 30%">id</th>
                                <th scope="col" style="width: 55%">name</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% let i=0;
                            for(i;i<data.list_category.length;i++){%>
                            <%if(data.list_category[i].checkdelete==0){%>
                            <tr>
                                <th scope="row"><%=data.list_category[i].id%></th>
                                <td><%=data.list_category[i].name%></td>
                                <td>
                                    <a href="/DeleteLoai/<%=data.list_category[i].id%>"><img src="/images/delete.png" height="15px" width="15px"></a>
                                    <a style="margin-left: 20px" href="/SuaLoaiSP/<%=data.list_category[i].id%>"><img src="/images/edit.png" height="15px" width="15px"></a>
                                </td>
                            </tr>
                            <%}}%>
                            </tbody>
                        </table>
                    </form>
                    <hr>
                    <a href="/themNhaSX"><button id="btnThem">Thêm nhà sản xuất</button></a>
                    <form id="formDsNhaSX">
                        <h4 style="color: red;margin-left: 200px">Danh sách nhà sản xuất</h4>
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col" style="width: 30%">id</th>
                                <th scope="col" style="width: 55%">name</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% let j=0;
                            for(j;j<data.list_producer.length;j++){%>
                            <%if(data.list_producer[j].checkdelete==0){%>
                            <tr>
                                <th scope="row"><%=data.list_producer[j].id%></th>
                                <td><%=data.list_producer[j].name%></td>
                                <td>
                                    <a href="/DeleteNhaSX/<%=data.list_producer[j].id%>"><img src="/images/delete.png" height="15px" width="15px"></a>
                                    <a style="margin-left: 20px" href="/SuaNhaSX/<%=data.list_producer[j].id%>"><img src="/images/edit.png" height="15px" width="15px"></a>
                                </td>
                            </tr>
                            <%}}%>
                            </tbody>
                        </table>
                    </form>
                </div>
                <div class="col-2"></div>
            </div>

        </div>
    </div>
</div>
</body>
</html>
